@page "{tripId:int}"
@model OptifyBookingTask.UI.Pages.Trips.Reservations.CreateModel
@{
    ViewData["Title"] = "Book Trip";
    var apiBaseUrl = "https://localhost:7013"; // ضع هنا URL السيرفر
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container my-5">
    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <h3 class="card-title text-center mb-4">Book Trip: @Model.Trip.Name</h3>
            <p class="text-center text-muted mb-4">City: @Model.Trip.CityName | Price: EGP @Model.Trip.Price</p>

            <form id="reservationForm">
                <div class="mb-3">
                    <label asp-for="Reservation.CustomerName" class="form-label">Your Name</label>
                    <input asp-for="Reservation.CustomerName" class="form-control" />
                    <span asp-validation-for="Reservation.CustomerName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Reservation.ReservationDate" class="form-label">Reservation Date</label>
                    <input asp-for="Reservation.ReservationDate" type="date" class="form-control" />
                    <span asp-validation-for="Reservation.ReservationDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Reservation.Notes" class="form-label">Notes</label>
                    <textarea asp-for="Reservation.Notes" class="form-control"></textarea>
                    <span asp-validation-for="Reservation.Notes" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary flex-grow-1 me-2">Book Now</button>
                    <a href="/Trips" class="btn btn-secondary flex-grow-1 ms-2">Cancel</a>
                </div>

                <div id="validationErrors" class="mt-3 text-danger"></div>
            </form>
        </div>
    </div>

    <!-- Toast Notification -->
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div id="successToast" class="toast align-items-center text-white bg-success border-0" role="alert">
            <div class="d-flex">
                <div class="toast-body">Reservation created successfully!</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function() {
            // Realtime validation
            $("#reservationForm").validate({
                onkeyup: function(el) { $(el).valid(); },
                onfocusout: function(el) { $(el).valid(); }
            });

            $("#reservationForm").submit(function(e) {
                e.preventDefault();
                $("#validationErrors").html(""); // reset errors

                if (!$(this).valid()) return;

                // UserId ثابت من seed data
                const reservationData = {
                    userId: 1, // افتراضي
                    tripId: @Model.Trip.Id,
                    customerName: $("#Reservation_CustomerName").val(),
                    reservationDate: new Date($("#Reservation_ReservationDate").val()).toISOString(),
                    notes: $("#Reservation_Notes").val()
                };

                console.log("Sending reservation:", reservationData);

                $.ajax({
                    url: "https://localhost:7141/api/reservations",
                    method: "POST",
                    contentType: "application/json",
                    data: JSON.stringify(reservationData),
                    success: function(data, textStatus, xhr) {
                        if (xhr.status === 201 && data.id) {
                            var toastEl = document.getElementById('successToast');
                            var toast = new bootstrap.Toast(toastEl);
                            toast.show();

                            setTimeout(function() {
                                window.location.href = "/Trips/Reservations/Details/" + data.id;
                            }, 1000);
                        } else {
                            $("#validationErrors").text("Unexpected server response.");
                        }
                    },
                    error: function(xhr) {
                        if (xhr.responseJSON?.errors) {
                            let errorMessages = xhr.responseJSON.errors
                                .map(e => `${e.field}: ${Array.from(e.error).join(", ")}`)
                                .join("<br>");
                            $("#validationErrors").html(errorMessages);
                        } else {
                            $("#validationErrors").text(xhr.responseText);
                        }
                    }
                });
            });
        });
    </script>
}
