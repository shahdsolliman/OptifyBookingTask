@page "{tripId:int}"
@model OptifyBookingTask.UI.Pages.Trips.Reservations.CreateModel
@{
    ViewData["Title"] = "Book Trip";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">
            <div class="mb-4 text-center">
                <h1 class="h3 fw-bold text-primary">Book Your Trip</h1>
                <p class="text-muted mb-0">Fill in your details below to confirm your reservation.</p>
            </div>

            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">
                    <h2 class="h5 card-title text-center mb-2">Trip: @Model.Trip.Name</h2>
                    <p class="text-center text-muted mb-4">
                        <span class="me-3"><i class="bi bi-geo-alt-fill text-danger me-1"></i>@Model.Trip.CityName</span>
                        <span><i class="bi bi-cash-stack text-success me-1"></i>EGP @Model.Trip.Price</span>
                    </p>

                    <form id="reservationForm" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" aria-live="polite"></div>

                <div class="mb-3">
                            <label asp-for="Reservation.CustomerName" class="form-label fw-semibold">
                                Your Name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Reservation.CustomerName" class="form-control" aria-required="true" />
                            <span asp-validation-for="Reservation.CustomerName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Reservation.ReservationDate" class="form-label fw-semibold">
                                Reservation Date <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Reservation.ReservationDate" type="date" class="form-control" aria-required="true" />
                            <span asp-validation-for="Reservation.ReservationDate" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Reservation.Notes" class="form-label fw-semibold">Notes (optional)</label>
                            <textarea asp-for="Reservation.Notes" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Reservation.Notes" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4 gap-2">
                            <button type="submit"
                                    id="submitReservationBtn"
                                    class="btn btn-primary flex-grow-1 d-flex justify-content-center align-items-center">
                                <span id="submitReservationText">Book Now</span>
                            </button>
                            <a href="/Trips"
                               class="btn btn-outline-secondary flex-grow-1 d-flex justify-content-center align-items-center">
                                Cancel
                            </a>
                        </div>

                        <div id="validationErrors" class="mt-3 text-danger small" aria-live="polite"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast Notification -->
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div id="successToast" class="toast align-items-center text-white bg-success border-0" role="alert">
            <div class="d-flex">
                <div class="toast-body">Reservation created successfully!</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function() {
            // Realtime validation
            $("#reservationForm").validate({
                onkeyup: function(el) { $(el).valid(); },
                onfocusout: function(el) { $(el).valid(); }
            });

            $("#reservationForm").submit(function(e) {
                e.preventDefault();
                $("#validationErrors").html(""); // reset errors

                if (!$(this).valid()) return;

                const $submitBtn = $("#submitReservationBtn");
                const $submitText = $("#submitReservationText");
                $submitBtn.prop("disabled", true);
                $submitText.html(
                    '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Processing...'
                );

                // UserId fixed from seed data
                const reservationData = {
                    userId: 1, 
                    tripId: @Model.Trip.Id,
                    customerName: $("#Reservation_CustomerName").val(),
                    reservationDate: new Date($("#Reservation_ReservationDate").val()).toISOString(),
                    notes: $("#Reservation_Notes").val()
                };

                console.log("Sending reservation:", reservationData);

                $.ajax({
                    url: "https://localhost:7141/api/reservations",
                    method: "POST",
                    contentType: "application/json",
                    data: JSON.stringify(reservationData),
                    success: function(data, textStatus, xhr) {
                        if (xhr.status === 201 && data.id) {
                            var toastEl = document.getElementById('successToast');
                            var toast = new bootstrap.Toast(toastEl);
                            toast.show();

                            setTimeout(function() {
                                window.location.href = "/Trips/Reservations/Details/" + data.id;
                            }, 1000);
                        } else {
                            $("#validationErrors").text("Unexpected server response.");
                            $submitBtn.prop("disabled", false);
                            $submitText.text("Book Now");
                        }
                    },
                    error: function(xhr) {
                        if (xhr.responseJSON?.errors) {
                            let errorMessages = xhr.responseJSON.errors
                                .map(e => `${e.field}: ${Array.from(e.error).join(", ")}`)
                                .join("<br>");
                            $("#validationErrors").html(errorMessages);
                        } else {
                            $("#validationErrors").text(xhr.responseText);
                        }
                        $submitBtn.prop("disabled", false);
                        $submitText.text("Book Now");
                    }
                });
            });
        });
    </script>
}
