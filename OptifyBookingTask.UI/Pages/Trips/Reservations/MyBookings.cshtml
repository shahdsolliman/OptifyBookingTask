@page
@model OptifyBookingTask.UI.Pages.Reservations.MyBookingsModel
@{
    ViewData["Title"] = "My Bookings";
    Layout = "_Layout";
}

<div class="container pb-5 mb-5 mt-4 pt-4">
    <div class="row justify-content-center mb-3">
        <div class="col-lg-8 col-md-10 text-center">
            <h1 class="h3 fw-bold text-primary">My Bookings</h1>
            <p class="text-muted mb-0">
                Review, update, or cancel your existing reservations.
            </p>
        </div>
    </div>

    @if (Model.Reservations != null && Model.Reservations.Any())
    {
        <div class="alert alert-info d-flex justify-content-between align-items-center mb-3" role="status">
            <span>
                <i class="bi bi-calendar-check me-2"></i>
                You have <strong>@Model.Reservations.Count</strong> active booking(s).
            </span>
            <a href="/Trips" class="btn btn-sm btn-outline-primary">
                <i class="bi bi-plus-circle me-1"></i> Book another trip
            </a>
        </div>

        <div class="table-responsive shadow rounded-4 bg-white p-3">
            <table class="table table-striped table-hover align-middle text-center mb-0" role="table">
                <thead class="table-primary">
                    <tr>
                        <th scope="col">Trip</th>
                        <th scope="col">City</th>
                        <th scope="col">Customer</th>
                        <th scope="col">Reservation Date</th>
                        <th scope="col">Created On</th>
                        <th scope="col">Notes</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var res in Model.Reservations)
                    {
                        <tr id="row-@res.Id">
                            <td class="fw-semibold">@res.TripName</td>
                            <td>@res.CityName</td>
                            <td>@res.CustomerName</td>
                            <td>@res.ReservationDate.ToString("yyyy-MM-dd")</td>
                            <td>@res.CreationDate.ToString("yyyy-MM-dd")</td>
                            <td>
                                @if (!string.IsNullOrWhiteSpace(res.Notes))
                                {
                                    @res.Notes
                                }
                                else
                                {
                                    <span class="text-muted">No notes</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Reservation actions">
                                    <a asp-page="/Trips/Reservations/Details"
                                       asp-route-id="@res.Id"
                                       class="btn btn-sm btn-outline-info"
                                       title="View details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-page="/Trips/Reservations/Update"
                                       asp-route-id="@res.Id"
                                       class="btn btn-sm btn-outline-warning"
                                       title="Edit reservation">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button class="btn btn-sm btn-outline-danger delete-btn"
                                            data-id="@res.Id"
                                            type="button"
                                            title="Delete reservation">
                                        <span class="delete-text">
                                            <i class="bi bi-trash"></i>
                                        </span>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center text-muted fs-5 mt-5">
            <i class="bi bi-calendar-x display-6 d-block mb-3 text-secondary"></i>
            <p class="mb-2">You don't have any bookings yet.</p>
            <a href="/Trips" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i> Browse trips and book now
            </a>
        </div>
    }
</div>

<!-- Toast Notification -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
    <div id="toastNotification" class="toast align-items-center text-white bg-success border-0 shadow" role="alert">
        <div class="d-flex">
            <div class="toast-body fw-semibold" id="toastMessage"></div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".delete-btn").on("click", function () {
                const id = $(this).data("id");
                if (!confirm("Are you sure you want to delete this reservation?")) return;

                const $button = $(this);
                const $textSpan = $button.find(".delete-text");

                $button.prop("disabled", true);
                $textSpan.html(
                    '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>'
                );

                $.ajax({
                    url: `https://localhost:7141/api/reservations/${id}`,
                    type: "DELETE",
                    success: function () {
                        $(`#row-${id}`).fadeOut(600, function () {
                            $(this).remove();

                            if ($("tbody tr").length === 0) {
                                location.reload();
                            }
                        });
                        showToast("Reservation deleted successfully!", true);
                    },
                    error: function (xhr) {
                        showToast(xhr.responseText || "Error deleting reservation.", false);
                        $button.prop("disabled", false);
                        $textSpan.html('<i class="bi bi-trash"></i>');
                    }
                });
            });

            function showToast(message, success) {
                const toastEl = document.getElementById('toastNotification');
                const toast = new bootstrap.Toast(toastEl);
                $("#toastMessage").text(message);

                if (success) {
                    $("#toastNotification").removeClass("bg-danger").addClass("bg-success");
                } else {
                    $("#toastNotification").removeClass("bg-success").addClass("bg-danger");
                }

                toast.show();
            }
        });
    </script>
}
