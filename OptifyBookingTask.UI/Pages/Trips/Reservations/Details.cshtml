@page "{id:int}"
@model OptifyBookingTask.UI.Pages.Trips.Reservations.DetailsModel
@{
    ViewData["Title"] = "Reservation Details";
}

<div class="container py-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="mb-4 text-center">
                <h1 class="h3 fw-bold text-primary">Reservation Details</h1>
                <p class="text-muted mb-0">Review your reservation information or manage it below.</p>
            </div>

            <div class="card shadow-lg border-0 rounded-4 mb-4">
                <div class="card-body bg-light p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle bg-primary-subtle text-primary d-inline-flex align-items-center justify-content-center me-3"
                             style="width: 40px; height: 40px;">
                            <i class="bi bi-ticket-detailed-fill"></i>
                        </div>
                        <div>
                            <h2 class="h5 mb-0">Reservation Summary</h2>
                            <small class="text-muted">Overview of your current booking.</small>
                        </div>
                    </div>

                    <ul class="list-group list-group-flush" aria-label="Reservation summary">
                        <li class="list-group-item py-3 d-flex justify-content-between align-items-center">
                            <span class="text-primary fw-semibold">Reservation ID</span>
                            <span class="fw-semibold">@Model.Reservation.Id</span>
                        </li>
                        <li class="list-group-item py-3 d-flex justify-content-between align-items-center">
                            <span class="text-primary fw-semibold">Destination</span>
                            <span>
                                @(
                                    !string.IsNullOrWhiteSpace(Model.Reservation.TripName)
                                        ? Model.Reservation.TripName
                                        : "N/A"
                                 )
                                @if (!string.IsNullOrWhiteSpace(Model.Reservation.CityName))
                                {
                                    <span class="text-muted ms-1">(@Model.Reservation.CityName)</span>
                                }
                            </span>
                        </li>
                        <li class="list-group-item py-3 d-flex justify-content-between align-items-center">
                            <span class="text-primary fw-semibold">Status</span>
                            <span class="badge bg-success-subtle text-success border border-success-subtle px-3 py-2">
                                <i class="bi bi-check-circle me-1"></i> Confirmed
                            </span>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="row g-4 mb-4">
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="rounded-circle bg-info-subtle text-info d-inline-flex align-items-center justify-content-center me-3"
                                     style="width: 38px; height: 38px;">
                                    <i class="bi bi-geo-alt-fill"></i>
                                </div>
                                <div>
                                    <h3 class="h6 mb-0">Trip Information</h3>
                                    <small class="text-muted">Where and when you are going.</small>
                                </div>
                            </div>

                            <dl class="row mb-0 small">
                                <dt class="col-5 text-muted">Trip</dt>
                                <dd class="col-7 mb-2">
                                    @(
                                        !string.IsNullOrWhiteSpace(Model.Reservation.TripName)
                                            ? Model.Reservation.TripName
                                            : "N/A"
                                     )
                                </dd>

                                <dt class="col-5 text-muted">City</dt>
                                <dd class="col-7 mb-2">
                                    @(
                                        !string.IsNullOrWhiteSpace(Model.Reservation.CityName)
                                            ? Model.Reservation.CityName
                                            : "N/A"
                                     )
                                </dd>

                                <dt class="col-5 text-muted">Reservation Date</dt>
                                <dd class="col-7 mb-0">
                                    @Model.Reservation.ReservationDate.ToString("yyyy-MM-dd")
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="rounded-circle bg-warning-subtle text-warning d-inline-flex align-items-center justify-content-center me-3"
                                     style="width: 38px; height: 38px;">
                                    <i class="bi bi-person-badge-fill"></i>
                                </div>
                                <div>
                                    <h3 class="h6 mb-0">Customer Information</h3>
                                    <small class="text-muted">Who made this reservation.</small>
                                </div>
                            </div>

                            <dl class="row mb-0 small">
                                <dt class="col-5 text-muted">Customer Name</dt>
                                <dd class="col-7 mb-2">
                                    @Model.Reservation.CustomerName
                                </dd>

                                <dt class="col-5 text-muted">User Email</dt>
                                <dd class="col-7 mb-2">
                                    @Model.Reservation.UserEmail
                                </dd>

                                <dt class="col-5 text-muted">Notes</dt>
                                <dd class="col-7 mb-0">
                                    @if (!string.IsNullOrWhiteSpace(Model.Reservation.Notes))
                                    {
                                        @Model.Reservation.Notes
                                    }
                                    else
                                    {
                                        <span class="text-muted">No additional notes.</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle bg-secondary-subtle text-secondary d-inline-flex align-items-center justify-content-center me-3"
                             style="width: 38px; height: 38px;">
                            <i class="bi bi-clock-history"></i>
                        </div>
                        <div>
                            <h3 class="h6 mb-0">Reservation Timeline</h3>
                            <small class="text-muted">Key dates for this booking.</small>
                        </div>
                    </div>

                    <div class="row small">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <div class="border rounded-3 p-3 h-100 bg-light-subtle">
                                <span class="text-muted d-block mb-1">
                                    <i class="bi bi-calendar-check me-1 text-success"></i>
                                    Reserved For
                                </span>
                                <span class="fw-semibold">
                                    @Model.Reservation.ReservationDate.ToString("dddd, dd MMM yyyy")
                                </span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="border rounded-3 p-3 h-100 bg-light-subtle">
                                <span class="text-muted d-block mb-1">
                                    <i class="bi bi-calendar-event me-1 text-primary"></i>
                                    Created On
                                </span>
                                <span class="fw-semibold">
                                    @Model.Reservation.CreationDate.ToString("dddd, dd MMM yyyy")
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle bg-danger-subtle text-danger d-inline-flex align-items-center justify-content-center me-3"
                             style="width: 38px; height: 38px;">
                            <i class="bi bi-tools"></i>
                        </div>
                        <div>
                            <h3 class="h6 mb-0">Actions</h3>
                            <small class="text-muted">Manage or go back to your bookings.</small>
                        </div>
                    </div>

                    <div class="d-flex flex-column flex-md-row justify-content-between mt-2 gap-2">
                        <a asp-page="/Trips/Reservations/Update" asp-route-id="@Model.Reservation.Id"
                           class="btn btn-warning text-white fw-semibold d-flex justify-content-center align-items-center flex-grow-1">
                            <i class="bi bi-pencil-square me-1"></i> Update Reservation
                        </a>

                        <button class="btn btn-danger fw-semibold d-flex justify-content-center align-items-center flex-grow-1"
                                id="deleteReservation">
                            <span id="deleteReservationText">
                                <i class="bi bi-trash me-1"></i> Cancel Reservation
                            </span>
                        </button>

                        <a href="/Trips/Reservations/MyBookings"
                           class="btn btn-outline-secondary fw-semibold d-flex justify-content-center align-items-center flex-grow-1">
                            <i class="bi bi-arrow-left me-1"></i> Back to My Bookings
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast Notification -->
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div id="toastNotification" class="toast align-items-center text-white bg-success border-0 shadow-lg" role="alert">
            <div class="d-flex">
                <div class="toast-body fw-semibold" id="toastMessage"></div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $("#deleteReservation").click(function () {
            if (!confirm("Are you sure you want to delete this reservation?")) return;

            const $deleteBtn = $("#deleteReservation");
            const $deleteText = $("#deleteReservationText");
            $deleteBtn.prop("disabled", true);
            $deleteText.html(
                '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Deleting...'
            );

            $.ajax({
                url: "https://localhost:7141/api/reservations/@Model.Reservation.Id",
                type: "DELETE",
                success: function () {
                    showToast("Reservation deleted successfully!", true);
                    setTimeout(function () {
                        window.location.href = "/Trips/Reservations/MyBookings";
                    }, 1500);
                },
                error: function (xhr) {
                    showToast("Error deleting reservation: " + (xhr.responseText || "Unknown error."), false);
                    $deleteBtn.prop("disabled", false);
                    $deleteText.html('<i class="bi bi-trash me-1"></i> Delete');
                }
            });
        });

        function showToast(message, success) {
            const toastEl = document.getElementById('toastNotification');
            const toast = new bootstrap.Toast(toastEl);
            $("#toastMessage").text(message);

            if (success) {
                $("#toastNotification").removeClass("bg-danger").addClass("bg-success");
            } else {
                $("#toastNotification").removeClass("bg-success").addClass("bg-danger");
            }

            toast.show();
        }
    </script>
}

<style>
    body {
        background-color: #f6f9fc;
    }

    .card {
        border-radius: 1.2rem;
    }

    .list-group-item {
        background-color: #fff;
        border: none;
        border-bottom: 1px solid #eaeaea;
    }

    .btn {
        border-radius: 0.5rem;
        font-weight: 600;
        transition: 0.2s ease-in-out;
    }

    .btn-warning {
        background-color: #ffc107;
        border: none;
    }

        .btn-warning:hover {
            background-color: #ffb300;
            color: white;
        }

    .btn-danger:hover {
        background-color: #c82333;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
    }

    .toast {
        border-radius: 0.75rem;
        font-size: 0.95rem;
    }
</style>
