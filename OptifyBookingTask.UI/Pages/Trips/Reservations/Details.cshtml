@page "{id:int}"
@model OptifyBookingTask.UI.Pages.Trips.Reservations.DetailsModel
@{
    ViewData["Title"] = "Reservation Details";
}

<div class="container py-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="mb-4 text-center">
                <h1 class="h3 fw-bold text-primary">Reservation Details</h1>
                <p class="text-muted mb-0">Review your reservation information or manage it below.</p>
            </div>

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body bg-light p-4">
                    <ul class="list-group list-group-flush mb-4" aria-label="Reservation summary">
                        <li class="list-group-item py-3 d-flex justify-content-between align-items-center">
                            <span class="text-primary fw-semibold">Trip</span>
                            <span>@Model.Reservation.TripName</span>
                        </li>
                        <li class="list-group-item py-3 d-flex justify-content-between align-items-center">
                            <span class="text-primary fw-semibold">City</span>
                            <span>@Model.Reservation.CityName</span>
                        </li>
                        <li class="list-group-item py-3 d-flex justify-content-between align-items-center">
                            <span class="text-primary fw-semibold">Customer Name</span>
                            <span>@Model.Reservation.CustomerName</span>
                        </li>
                        <li class="list-group-item py-3 d-flex justify-content-between align-items-center">
                            <span class="text-primary fw-semibold">Reservation Date</span>
                            <span>@Model.Reservation.ReservationDate.ToString("yyyy-MM-dd")</span>
                        </li>
                        <li class="list-group-item py-3 d-flex justify-content-between align-items-center">
                            <span class="text-primary fw-semibold">Created On</span>
                            <span>@Model.Reservation.CreationDate.ToString("yyyy-MM-dd")</span>
                        </li>

                        @if (!string.IsNullOrEmpty(Model.Reservation.Notes))
                        {
                            <li class="list-group-item py-3">
                                <span class="text-primary fw-semibold d-block mb-1">Notes</span>
                                <span>@Model.Reservation.Notes</span>
                            </li>
                        }

                        <li class="list-group-item py-3 d-flex justify-content-between align-items-center">
                            <span class="text-primary fw-semibold">User Email</span>
                            <span>@Model.Reservation.UserEmail</span>
                        </li>
                    </ul>

                    <div class="d-flex justify-content-between mt-4 gap-3">
                        <a asp-page="/Trips/Reservations/Update" asp-route-id="@Model.Reservation.Id"
                           class="btn btn-warning flex-grow-1 text-white fw-semibold d-flex justify-content-center align-items-center">
                            <i class="bi bi-pencil-square me-1"></i> Update
                        </a>

                        <button class="btn btn-danger flex-grow-1 fw-semibold d-flex justify-content-center align-items-center"
                                id="deleteReservation">
                            <span id="deleteReservationText">
                                <i class="bi bi-trash me-1"></i> Delete
                            </span>
                        </button>

                        <a href="/Trips/Reservations/MyBookings"
                           class="btn btn-outline-secondary flex-grow-1 fw-semibold d-flex justify-content-center align-items-center">
                            <i class="bi bi-arrow-left me-1"></i> Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast Notification -->
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div id="toastNotification" class="toast align-items-center text-white bg-success border-0 shadow-lg" role="alert">
            <div class="d-flex">
                <div class="toast-body fw-semibold" id="toastMessage"></div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $("#deleteReservation").click(function () {
            if (!confirm("Are you sure you want to delete this reservation?")) return;

            const $deleteBtn = $("#deleteReservation");
            const $deleteText = $("#deleteReservationText");
            $deleteBtn.prop("disabled", true);
            $deleteText.html(
                '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Deleting...'
            );

            $.ajax({
                url: "https://localhost:7141/api/reservations/@Model.Reservation.Id",
                type: "DELETE",
                success: function () {
                    showToast("Reservation deleted successfully!", true);
                    setTimeout(function () {
                        window.location.href = "/Trips/Reservations/MyBookings";
                    }, 1500);
                },
                error: function (xhr) {
                    showToast("Error deleting reservation: " + (xhr.responseText || "Unknown error."), false);
                    $deleteBtn.prop("disabled", false);
                    $deleteText.html('<i class="bi bi-trash me-1"></i> Delete');
                }
            });
        });

        function showToast(message, success) {
            const toastEl = document.getElementById('toastNotification');
            const toast = new bootstrap.Toast(toastEl);
            $("#toastMessage").text(message);

            if (success) {
                $("#toastNotification").removeClass("bg-danger").addClass("bg-success");
            } else {
                $("#toastNotification").removeClass("bg-success").addClass("bg-danger");
            }

            toast.show();
        }
    </script>
}

<style>
    body {
        background-color: #f6f9fc;
    }

    .card {
        border-radius: 1.2rem;
    }

    .list-group-item {
        background-color: #fff;
        border: none;
        border-bottom: 1px solid #eaeaea;
    }

    .btn {
        border-radius: 0.5rem;
        font-weight: 600;
        transition: 0.2s ease-in-out;
    }

    .btn-warning {
        background-color: #ffc107;
        border: none;
    }

        .btn-warning:hover {
            background-color: #ffb300;
            color: white;
        }

    .btn-danger:hover {
        background-color: #c82333;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
    }

    .toast {
        border-radius: 0.75rem;
        font-size: 0.95rem;
    }
</style>
