@page "{id:int}"
@model OptifyBookingTask.UI.Pages.Trips.Reservations.DetailsModel
@{
    ViewData["Title"] = "Reservation Details";
}

<div class="container py-5 mb-5">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
                <h3 class="mb-0 fw-bold">
                    <i class="bi bi-info-circle me-2"></i> Reservation Details
                </h3>
            </div>

            <div class="card-body bg-light p-4">
                <ul class="list-group list-group-flush mb-4">
                    <li class="list-group-item py-3">
                        <strong class="text-primary">Trip:</strong> @Model.Reservation.TripName
                    </li>
                    <li class="list-group-item py-3">
                        <strong class="text-primary">City:</strong> @Model.Reservation.CityName
                    </li>
                    <li class="list-group-item py-3">
                        <strong class="text-primary">Customer Name:</strong> @Model.Reservation.CustomerName
                    </li>
                    <li class="list-group-item py-3">
                        <strong class="text-primary">Reservation Date:</strong> @Model.Reservation.ReservationDate.ToString("yyyy-MM-dd")
                    </li>
                    <li class="list-group-item py-3">
                        <strong class="text-primary">Created On:</strong> @Model.Reservation.CreationDate.ToString("yyyy-MM-dd")
                    </li>

                    @if (!string.IsNullOrEmpty(Model.Reservation.Notes))
                    {
                        <li class="list-group-item py-3">
                            <strong class="text-primary">Notes:</strong> @Model.Reservation.Notes
                        </li>
                    }

                    <li class="list-group-item py-3">
                        <strong class="text-primary">User Email:</strong> @Model.Reservation.UserEmail
                    </li>
                </ul>

                <div class="d-flex justify-content-between mt-4 gap-3">
                    <a asp-page="/Trips/Reservations/Update" asp-route-id="@Model.Reservation.Id"
                       class="btn btn-warning flex-grow-1 text-white fw-semibold">
                        <i class="bi bi-pencil-square me-1"></i> Update
                    </a>

                    <button class="btn btn-danger flex-grow-1 fw-semibold" id="deleteReservation">
                        <i class="bi bi-trash me-1"></i> Delete
                    </button>

                    <a href="/Trips/Reservations/MyBookings"
                       class="btn btn-outline-secondary flex-grow-1 fw-semibold">
                        <i class="bi bi-arrow-left me-1"></i> Back
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast Notification -->
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div id="toastNotification" class="toast align-items-center text-white bg-success border-0 shadow-lg" role="alert">
            <div class="d-flex">
                <div class="toast-body fw-semibold" id="toastMessage"></div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $("#deleteReservation").click(function () {
            if (!confirm("Are you sure you want to delete this reservation?")) return;

            $.ajax({
                url: "https://localhost:7141/api/reservations/@Model.Reservation.Id",
                type: "DELETE",
                success: function () {
                    showToast("Reservation deleted successfully!", true);
                    setTimeout(function () {
                        window.location.href = "/Trips/Reservations/MyBookings";
                    }, 1500);
                },
                error: function (xhr) {
                    showToast("Error deleting reservation: " + (xhr.responseText || "Unknown error."), false);
                }
            });
        });

        function showToast(message, success) {
            const toastEl = document.getElementById('toastNotification');
            const toast = new bootstrap.Toast(toastEl);
            $("#toastMessage").text(message);

            if (success) {
                $("#toastNotification").removeClass("bg-danger").addClass("bg-success");
            } else {
                $("#toastNotification").removeClass("bg-success").addClass("bg-danger");
            }

            toast.show();
        }
    </script>
}

<style>
    body {
        background-color: #f6f9fc;
    }

    .card {
        border-radius: 1.2rem;
    }

    .list-group-item {
        background-color: #fff;
        border: none;
        border-bottom: 1px solid #eaeaea;
    }

    .btn {
        border-radius: 0.5rem;
        font-weight: 600;
        transition: 0.2s ease-in-out;
    }

    .btn-warning {
        background-color: #ffc107;
        border: none;
    }

        .btn-warning:hover {
            background-color: #ffb300;
            color: white;
        }

    .btn-danger:hover {
        background-color: #c82333;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
    }

    .toast {
        border-radius: 0.75rem;
        font-size: 0.95rem;
    }
</style>
