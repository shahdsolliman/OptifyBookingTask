@page
@model OptifyBookingTask.UI.Pages.Trips.IndexModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Explore Egypt's Best Trips";
}

<style>
    /* Smooth Scroll */
    html {
        scroll-behavior: smooth;
    }

    /* Trips Section */
    .trips-section {
        padding: 80px 0;
    }

    .trip-card {
        border: none;
        border-radius: 18px;
        overflow: hidden;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.4s ease;
        background-color: #ffffff;
        opacity: 0;
        transform: translateY(30px); 
    }

        .trip-card.visible {
            opacity: 1;
            transform: translateY(0);
            transition: all 0.6s ease-out;
        }

        .trip-card:hover {
            transform: translateY(-10px) scale(1.03);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
        }

        .trip-card img {
            height: 220px;
            object-fit: cover;
            width: 100%;
            transition: transform 0.4s ease;
        }

        .trip-card:hover img {
            transform: scale(1.1);
        }

        .trip-card .card-body {
            padding: 20px;
        }

        .trip-card h5 {
            font-weight: 600;
            color: #004aad;
            font-size: 1.1rem;
        }

        .trip-card p {
            color: #666;
            font-size: 0.95rem;
        }

        .trip-card .btn-outline-primary {
            transition: all 0.3s ease;
        }

            .trip-card .btn-outline-primary:hover {
                background-color: #004aad;
                color: #fff;
                border-color: #004aad;
            }
</style>

<!-- Trips Section -->
<section id="trips" class="trips-section py-5">
    <div class="container">
        <div class="row justify-content-center mb-4">
            <div class="col-lg-8 text-center">
                <h1 class="fw-bold text-primary fs-3">Available Trips</h1>
                <p class="text-muted mb-0">
                    Choose from a variety of curated travel experiences across Egypt.
                </p>
            </div>
        </div>

        <div class="row g-4">
            @if (Model.Trips != null && Model.Trips.Any())
            {
                @foreach (var trip in Model.Trips)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card trip-card text-center m-auto h-100">
                            <img src="@trip.ImageUrl" alt="@trip.Name" class="card-img-top" />
                            <div class="card-body d-flex flex-column">
                                <h5 class="mb-1">@trip.Name</h5>
                                <p class="mb-2">
                                    <i class="bi bi-geo-alt-fill text-danger"></i> @trip.CityName
                                </p>
                                <p class="fw-semibold text-success mb-3">EGP @trip.Price.ToString("N0")</p>

                                <div class="mt-auto d-flex gap-2 justify-content-center">
                                    <a href="/Trips/Details/@trip.Id" class="btn btn-outline-primary btn-sm">
                                        View Details
                                    </a>
                                    <a href="/Trips/Reservations/Create/@trip.Id" class="btn btn-outline-warning btn-sm">
                                        Book Now
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center text-muted py-5">
                    <i class="bi bi-emoji-frown display-6 d-block mb-3 text-secondary"></i>
                    <p class="mb-2">No trips are available at the moment.</p>
                    <p class="mb-0">Please check back later or contact support for more information.</p>
                </div>
            }
        </div>

        <div class="text-center pb-5 my-5">
            <a href="/Feedbacks" class="btn btn-warning btn-lg px-4 py-2 fw-semibold">
                View Customers Feedback
            </a>
        </div>
    </div>
</section>

<script>
    // Fade-in on scroll
    function revealCards() {
        const cards = document.querySelectorAll('.trip-card');
        const windowHeight = window.innerHeight;
        cards.forEach(card => {
            const cardTop = card.getBoundingClientRect().top;
            if (cardTop < windowHeight - 100) {
                card.classList.add('visible');
            }
        });
    }

    window.addEventListener('scroll', revealCards);
    window.addEventListener('load', revealCards);
</script>
