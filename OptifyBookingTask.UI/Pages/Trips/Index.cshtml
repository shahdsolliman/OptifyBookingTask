@page
@model OptifyBookingTask.UI.Pages.Trips.IndexModel
@{
    Layout = "_Layout"; // نفترض إنك عامل Layout فيه navbar + footer
    ViewData["Title"] = "Explore Egypt's Best Trips";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    /* Smooth Scroll */
    html {
        scroll-behavior: smooth;
    }

    /* Trips Section */
    .trips-section {
        padding: 80px 0;
    }

    .trip-card {
        border: none;
        border-radius: 18px;
        overflow: hidden;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.4s ease;
        background-color: #ffffff;
        opacity: 0;
        transform: translateY(30px); 
    }

        .trip-card.visible {
            opacity: 1;
            transform: translateY(0);
            transition: all 0.6s ease-out;
        }

        .trip-card:hover {
            transform: translateY(-10px) scale(1.03);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
        }

        .trip-card img {
            height: 220px;
            object-fit: cover;
            width: 100%;
            transition: transform 0.4s ease;
        }

        .trip-card:hover img {
            transform: scale(1.1);
        }

        .trip-card .card-body {
            padding: 20px;
        }

        .trip-card h5 {
            font-weight: 600;
            color: #004aad;
            font-size: 1.1rem;
        }

        .trip-card p {
            color: #666;
            font-size: 0.95rem;
        }

        .trip-card .btn-outline-primary {
            transition: all 0.3s ease;
        }

            .trip-card .btn-outline-primary:hover {
                background-color: #004aad;
                color: #fff;
                border-color: #004aad;
            }
</style>

<!-- Trips Section -->
<section id="trips" class="trips-section py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold text-primary">Available Trips</h2>
            <p class="text-muted">Choose from a variety of curated travel experiences across Egypt.</p>
        </div>

        <div class="row g-4">
            @if (Model.Trips != null && Model.Trips.Any())
            {
                @foreach (var trip in Model.Trips)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card trip-card text-center m-auto">
                            <img src="@trip.ImageUrl" alt="@trip.Name" class="card-img-top" />
                            <div class="card-body">
                                <h5>@trip.Name</h5>
                                <p class="mb-2"><i class="bi bi-geo-alt-fill text-danger"></i> @trip.CityName</p>
                                <p class="fw-semibold text-success">EGP @trip.Price.ToString("N0")</p>

                                <!-- Buttons -->
                                <div class="d-flex gap-2 mt-2 d-flex justify-content-around ">
                                    <a href="/Trips/Details/@trip.Id" class="btn btn-outline-primary btn-sm">View Details</a>
                                    <a href="/Trips/Reservations/Create/@trip.Id" class="btn btn-outline-warning btn-sm">Book Now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            }
            else
            {
                <p class="text-center text-muted">No trips available at the moment.</p>
            }
        </div>

    </div>
</section>

        <div class="text-center pb-5 my-5">
            <a href="/Feedbacks" class="btn btn-warning btn-lg px-4 py-2 fw-semibold">
                View Customers Feedback
            </a>
        </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Fade-in on scroll
    function revealCards() {
        const cards = document.querySelectorAll('.trip-card');
        const windowHeight = window.innerHeight;
        cards.forEach(card => {
            const cardTop = card.getBoundingClientRect().top;
            if (cardTop < windowHeight - 100) {
                card.classList.add('visible');
            }
        });
    }

    window.addEventListener('scroll', revealCards);
    window.addEventListener('load', revealCards);
</script>
